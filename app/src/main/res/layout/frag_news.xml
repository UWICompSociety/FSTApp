<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    
            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/newsImage1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/muffins"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:id="@+id/heading1"
                        android:layout_width="wrap_content"
                        android:text="Heading1"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/description1"
                        android:text="Short description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
    
            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/newsImage2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/donut_holes"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:id="@+id/heading2"
                        android:layout_width="wrap_content"
                        android:text="Heading2"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/description2"
                        android:text="Short description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
    
            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/newsImage3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/coffee_cake"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:id="@+id/heading3"
                        android:layout_width="wrap_content"
                        android:text="Heading3"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/description3"
                        android:text="Short description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
    
        </LinearLayout>

    </ScrollView>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="40.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/newsDetail_header"
            android:layout_width="fill_parent"
            android:layout_height="200.0dip"
            android:scaleType="fitCenter"
            android:transitionName="news_image"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:background="@android:color/black"/>
        <TextView
            android:textSize="30.0sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:id="@+id/newsDetail_Topic"
            android:paddingTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="news_title"
            tools:text="Title of the News Story" />

        <TextView
            android:textSize="16.0sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/newsStory"
            android:paddingTop="30.0dip"
            android:paddingBottom="20.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            tools:text="@string/placeholder_lorem_ipsum" />
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--<style name="AppTheme.SASLogin">-->
    <!--<item name="windowActionBar">false</item>-->
    <!--<item name="windowNoTitle">true</item>-->
    <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    <!--<item name="android:windowTranslucentStatus">true</item>-->
    <!--</style>-->

    <style name="AppTheme.NoActionBar.SASLogin">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Settings">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar.PlayerActivity">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar.FAQActivity">
        <item name="android:statusBarColor">#FFA000</item>
    </style>

    <style name="AppTheme.NoActionBar.VideosListActivity">
        <item name="android:statusBarColor">#1976D2</item>
    </style>

    <style name="AppTheme.NoActionBar.PlacesCategoryActivity" >
        <item name="android:statusBarColor">#2196F3</item>
    </style>

    <style name="AppTheme.NoActionBar.MapSplashScreen">
        <item name="android:statusBarColor">#77bbf1</item>
    </style>

    <style name="AppTheme.NoActionBar.ScholarshipActivity">
        <item name="android:statusBarColor">#E64A19</item>
    </style>

    <style name="AppTheme.NoActionBar.GalleryActivity">
        <item name="android:statusBarColor">#C2185B</item>
    </style>

    <style name="AppTheme.NoActionBar.EventActivity">
        <item name="android:statusBarColor">#388E3C</item>
    </style>

    <style name="AppTheme.NoActionBar.AlertActivity">
        <item name="android:statusBarColor">#F44336</item>
    </style>

    <style name="AppTheme.NoActionBar.BusRoutesActivity">
        <item name="android:statusBarColor">#607D8B</item>
    </style>

    <style name="AppTheme.NoActionBar.BusRoutesDetailActivity">
        <item name="android:statusBarColor">#607D8B</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
    </style>


    <style name="AppTheme.NoActionBar.ContactsActivity">
        <item name="android:statusBarColor">#455A64</item>
    </style>

    <style name="AppTheme.NoActionBar.NewsDetailActivity">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>



    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/Silver</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/DarkGray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>



</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.SASLogin" />

    <style name="AppTheme.NoActionBar.PlayerActivity" />

    <style name="AppTheme.NoActionBar.PlacesCategoryActivity" />

    <style name="AppTheme.NoActionBar.FAQActivity" />

    <style name="AppTheme.NoActionBar.VideosListActivity" />

    <style name="AppTheme.NoActionBar.ScholarshipActivity" />

    <style name="AppTheme.NoActionBar.ContactsActivity" />

    <style name="AppTheme.NoActionBar.Settings" />

    <style name="AppTheme.NoActionBar.GalleryActivity" />

    <style name="AppTheme.NoActionBar.EventActivity" />

    <style name="AppTheme.NoActionBar.AlertActivity" />

    <style name="AppTheme.NoActionBar.BusRoutesActivity" />

    <style name="AppTheme.NoActionBar.BusRoutesDetailActivity" >
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">30sp</item>
    </style>

</resources>
